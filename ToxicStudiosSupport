    <script>
        function closeUI() {
            window.close();
        }

        function openSettings() {
            document.getElementById('settings-ui').style.display = 'block';
        }

        function toggleDarkMode() {
            if (document.getElementById('darkMode').checked) {
                document.body.style.backgroundColor = '#121212';
                document.body.style.color = '#fff';
            } else {
                document.body.style.backgroundColor = '#f4f4f4';
                document.body.style.color = 'black';
            }
        }

        function changeLanguage() {
            var lang = document.getElementById('language').value;
            if (lang == 'es') {
                document.getElementById('welcome-text').innerHTML = "Apoya a Toxic Studios";
                document.getElementById('support-title').innerHTML = "Apoyo a través de Redes Sociales";
                document.getElementById('more-games-title').innerHTML = "Más Juegos";
                document.getElementById('about-title').innerHTML = "Acerca de ToxicStudios";
                document.getElementById('about-content').innerHTML = "¡Bienvenido a ToxicStudios! Nos enfocamos en crear experiencias de juego divertidas y emocionantes.";
                document.getElementById('about-ui').style.display = 'block';
            } else if (lang == 'zh') {
                document.getElementById('welcome-text').innerHTML = "支持 Toxic Studios";
                document.getElementById('support-title').innerHTML = "通过社交媒体支持";
                document.getElementById('more-games-title').innerHTML = "更多游戏";
                document.getElementById('about-title').innerHTML = "关于 ToxicStudios";
                document.getElementById('about-content').innerHTML = "欢迎来到 ToxicStudios! 我们专注于创造有趣和令人兴奋的游戏体验。";
                document.getElementById('about-ui').style.display = 'block';
            } else {
                document.getElementById('welcome-text').innerHTML = "Support Toxic Studios";
                document.getElementById('support-title').innerHTML = "Support via Social";
                document.getElementById('more-games-title').innerHTML = "More Games";
                document.getElementById('about-title').innerHTML = "About ToxicStudios";
                document.getElementById('about-content').innerHTML = "Welcome to ToxicStudios! We're focused on creating fun and exciting gaming experiences.";
                document.getElementById('about-ui').style.display = 'block';
            }
        }

        function closeCover() {
            document.querySelector('.cover').style.display = 'none';
        }

        function proceedWithRedirection() {
            closeCover();
            window.open("https://www.patreon.com/c/ToxicStudios676", "_blank");
        }

        function openAbout() {
            document.getElementById('about-ui').style.display = 'block';
        }

        function openTermsPolicy() {
            document.getElementById('terms-policy-ui').style.display = 'block';
        }

        function closeModal(id) {
            document.getElementById(id).style.display = 'none';
        }
    </script>
</body>
</html>
